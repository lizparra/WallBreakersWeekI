class Solution {
    public int[][] flipAndInvertImage(int[][] A) {
        int[][] newArr = new int[A.length][A[0].length];
        int col = 0;
        for(int i = 0; i < A.length; i++){
            for(int j = A[i].length - 1; j >= 0; j--){
                col = (A[i].length - 1) - j;
                if(A[i][j] == 0)
                    newArr[i][col] = 1;
                else 
                    newArr[i][col] = 0;
            }
        }
        return newArr;
    }
}
